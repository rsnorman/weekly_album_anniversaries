<!DOCTYPE html>
<html ng-app="Norm.WeeklyAnniversary">
<head>
  <title>Best New Music Anniversaries</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <%= stylesheet_link_tag 'application', media: 'all' %>
  <script type="text/javascript">
    (function(w) {
      w.Norm = w.Norm || {};
    })(window);
  </script>
  <%= javascript_include_tag 'application' %>

  <%= csrf_meta_tags %>
</head>
<body ng-cloak ng-controller="WeeklyAnniversariesCtrl">
  <header class='fixed' id='large_screen_header'>
    <div class='wrapper'>
      <div>
        <h2>Best New Music Anniversaries</h2>
        <div class="week-range" ng-show="!!weekStart">
          <a href="javascript:;" id="prev_week_nav" class="week-nav" ng-class="{disabled: prevDisabled}" ng-click="getPrevWeek()"><%= fa_icon 'arrow-left' %></a>
          {{(weekStart * 1000) | date: 'MMM d'}} &mdash; {{(weekEnd * 1000) | date: 'MMM d'}}
          <a href="javascript:;" id="next_week_nav" class="week-nav" ng-class="{disabled: nextDisabled}" ng-click="getNextWeek()"><%= fa_icon 'arrow-right' %></a>

        </div>
      </div>
    </div>
  </header>

  <div id="main">
    <%= yield %>
  </div>
</body>
<script>
  (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
  (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
  m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
  })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

  ga('create', 'UA-43183791-4', 'auto');
  ga('send', 'pageview');

</script>
</html>
